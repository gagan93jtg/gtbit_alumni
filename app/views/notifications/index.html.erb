<div class="page_top_level_div">
	<h2>Unread notifications</h2>
	<% @notifications.each do |notif| %>
	<div class="notification">
		<% notification = JSON.parse(notif) %>
		<p class="notification_text">
			<%= notification["text"] %> <%= link_to 'post', post_path(notification["post_id"]) %>
		</p>
		<i> <%=timeago_tag Time.at(notification["timestamp"]) %> </i>
	</div>
	<% end %>
</div>
