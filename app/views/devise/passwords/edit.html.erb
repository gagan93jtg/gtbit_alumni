<div class="login-pane forgot_password_pane">
  <div class="container">
    <div class="main-form">

      <p class="forgot_password_text">Recover Password</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <div class="errors_warnings">
        <% unless devise_error_messages!.nil? %>
        <div class = "alert-gan alert-danger-gan"><%= devise_error_messages! %></div>
        <% end %>
      </div>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => "form-control", placeholder: 'New password (8 characters minimum)' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" , placeholder: 'Confirm new password' %>
      </div>
      <div class="actions">
        <%= f.submit "Change my password", :class => "btn background-seagreen btn-recover-password" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
