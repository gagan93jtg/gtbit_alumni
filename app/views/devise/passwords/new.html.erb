<% content_for :head do %>
  <meta property="og:type"        content="website" />
  <meta property="og:title"       content="GTBIT's very own alumni network" />
  <meta property="og:description" content="An initiative by GTBITians to connect with each other, share opportunities and solve student queries" />
  <title>GTBIT Alumni Network - Reset password</title>
<% end %>

<div class="login-pane forgot_password_pane">
  <div class="container">
    <div class="main-form glass-panel">
      <p class="forgot_password_text">Recover Password</p>

      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <div class="errors_warnings">
        <% unless devise_error_messages!.nil? %>
        <div class = "alert-gan alert-danger-gan"><%= devise_error_messages! %></div>
        <% end %>
      </div>
      <div class="field">
        <%= f.email_field :email, :autofocus => true, :placeholder => "Your email address", :class => "form-control"%>
      </div>

      <%= f.submit "Get reset instructions", :class => "btn background-seagreen btn-recover-password"%>
      <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>

