<div class="page_top_level_div">
    <% create_update_form_options(form_type) %>
    <%= form_for :query, :url => @url, :method => @form_method do |f|%>
    <h2>
      <%= form_type == "create" ? "Post a question" : "Update question"%>
  </h2>
  <br><br>
  <%= f.text_area :query_string, :value => @query.query_string,
  :placeholder => "Your query regarding internships, placements, higher studies" +
  " etc" ,
  :size => "30x6" %>
  <br><br>
  <%= f.text_area :tags, :value => @query.tags , :placeholder => "Tags (comma separated)",
  :size => "30x2"%>
  <br><br>
  <% if form_type == "create" %>
  <%= f.check_box :is_anonymous , :value => @query.is_anonymous%> Post anonymously
  <% end %>
  <br><br>
  <%= submit_tag(@save_string) %>
  <%end%>
</div>
