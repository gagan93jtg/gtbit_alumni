<div class="faqs-page">
  <div class="container-custom">
    <div class="faqs_header ">
        <h1>FAQ's</h1>
    </div>



    <div class="faqs_body ">
      <% @faqs.each_with_index do |faq, index| %>
      <div class="faq glass-panel">
        <p class="faq_question toggle_faq_answer_<%= index %>">
          <%= faq.question %> ?
        </p>
        <p class="faq_answer faq_answer_<%= index %> ">
          <%= faq.answer %>
        </p>
      </div>
      <% end %>
    </div>


    <div class="digg_pagination">
      <%= will_paginate @faqs, :container => false %>
    </div>
  </div>
</div>

<script type="text/javascript">
  bind_event_to_faq_questions("<%= @faqs.count %>");
</script>
