<% content_for :head do %>
  <meta property="og:type"        content="website" />
  <meta property="og:title"       content="Shared experiences on <%= get_domain_name %>" />
  <meta property="og:description" content="View / search from the list of shared experiences" />
  <meta property="og:image"       content="<%= get_domain_name + '/logov2.png' %>" />
  <title>GTBIT Alumni Network - View shared experiences</title>
<% end %>

<div class="search-experience">
  <div class="container-custom">
    <div class="search_div">
      <%= form_tag(experience_index_path, method: 'GET') do %>
      <%= text_field_tag 'search_query', nil, autofocus: true, placeholder: "Some text related to post", class: "form-control", size: 50, value: params['search_query'] %>
      <%= submit_tag "Search", class: "btn background-seagreen search_query" %>
      <% end %>
    </div>
    <div class="separator_hr"></div>
    <div class="activity_content">
      <% if @show_recent_posts %>
      <h3 class="search_heading">Most recent experiences</h3>
      <% else %>
      <h3 class="search_heading">Search results</h3>
      <% end %>

      <% @posts.each do |post| %>
      <%= render 'posts/show_single_post', post: post, show_full_post: false %>
      <% end %>
    </div>
    </div>
</div>
