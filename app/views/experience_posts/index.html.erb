<div class="search-experience">
  <div class="container-custom">
    <div class="search_div">
      <%= form_tag(experience_index_path, method: 'GET') do %>
      <%= text_field_tag 'search_query', nil, autofocus: true, placeholder: "Some text related to post", class: "form-control", size: 50, value: params['search_query'] %>
      <%= submit_tag "Search", class: "btn background-seagreen search_query" %>
      <% end %>
    </div>
    <div class="separator_hr"></div>
    <div class="activity_content">
      <% if @show_recent_posts %>
      <h3 class="search_heading">Most recent experiences</h3>
      <% else %>
      <h3 class="search_heading">Search results</h3>
      <% end %>

      <% @posts.each do |post| %>
      <div class="activity_question transparent-panel">
        <div class="left_div">
          <%= image_tag "logov2.png", class: 'img-circle public_activity_user', alt: 'profile pic' %>
        </div>
        <div class="right_div">
         <p class="user-name"><%= post.user.full_name %></p>
         <p class="user-time"><%= timeago_tag post.created_at %></p>
       </div>
       <span class="post-string user-post multiline_text"><%= post.query_string %></span>
       <%= link_to "View post", experience_path(post.id), class: 'view_post background-seagreen' %>
     </div>
     <% end %>
   </div>
 </div>

</div>