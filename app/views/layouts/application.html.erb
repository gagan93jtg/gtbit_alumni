                <li><a href="#"><%= link_to "Search questions", "#" %></a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#"><%= link_to 'Help', "#" %> </a></li>
                <li><a href="#"><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></a></li>
              </ul>
            </li>
            <!-- Dropdown-->
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  </div>
