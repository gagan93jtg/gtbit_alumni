<% content_for :head do %>
  <title>GTBIT Alumni Network - Admin - View job posts report</title>
<% end %>

<div class="table-main search_table">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th>Post</th>
        <th>Company</th>
        <th>Website</th>
        <th>Position</th>
        <th>Experience reqd (in months)</th>
        <th>Bond period (in months)</th>
        <th># Comments</th>
        <th>Is post edited ?</th>
        <th>Posted at</th>
        <th>Updated at</th>
      </tr>
    </thead>
    <tbody>
      <% @job_posts.each do |post| %>
      <tr>
        <td><%= link_to post.user.full_name, user_path(post.user.id), :target => "_blank" %></td>
        <td><%= link_to 'Click to view', job_path(post.id), :target => "_blank" %></td>
        <td><%= post.company_name %></td>
        <td><%= post.company_website %></td>
        <td><%= post.position %></td>
        <td><%= post.experience_in_months %></td>
        <td><%= post.bond_period_in_months %></td>
        <td><%= post.comments.count %></td>
        <td><%= post.is_edited == true ? 'Yes' : 'No' %></td>
        <td><%= timeago_tag post.created_at %></td>
        <td><%= timeago_tag post.updated_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="gan_pagination">
  <div class="internal_pagination">
    <%= will_paginate @job_posts, renderer: BootstrapPagination::Rails  %>
  </div>
  </div>
<div class="container-custom">
  <h4><%= @total_posts %> job(s) posted so far </h4>
</div>
