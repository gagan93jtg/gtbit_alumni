<div class="main">
    <div class="container-custom">      
      <% create_update_form_options(form_type) %>
      <%= form_for :post, :url => @url, :method => @form_method do |f|%>
      <h1><%= form_type == "create" ? "Post a question" : "Update question"%></h1>
        <div class="form-group">
          <label for="exampleInputName1">Question?</label>
          <textarea rows="5" class="form-control" id="exampleInputName1" placeholder="Your Query Regarding Internships, Placements, Higher Studies etc." autofocus="autofocus" name="post[query_string]"></textarea>
        </div>
        <div class="form-group">
          <label for="exampleInputName2">Tags</label>
          <textarea rows="3" class="form-control" id="exampleInputName2" placeholder="Tags(Comma Separated)" name="post[tags]"></textarea>
        </div>
        <div class="checkbox">
          <label class="check">
            <% if form_type == "create" %>
            <%= f.check_box :is_anonymous , :value => @post.is_anonymous%> Post anonymously
            <% end %>
          </label>
        </div>
        <button type="submit" class="btn-update btn btn-default">Post a Query</button>
        <%= submit_tag(@save_string) %>
      <%end%>

    </div>
  </div>
