<div class="page_top_level_div">
  <div class="show_question">
    <div class="question">
      <%= label_tag asked_by(@post.user) %> asked <%= anonymous?(@post) %>
      <br>
      <pre class='query_string'><%= @post.query_string.strip %></pre>
      <i> <%=timeago_tag Time.at(@post.created_at) %> </i>
      <br>
      <span class='tags'> <%= @post.tags %> </span>
      <% if @post.post_histories.count > 0 %>
      <a href="#" data-toggle="modal" data-target="#edit_history_modal" class="edit_history"> View edit history </a>
      <% end %>
    </div>
    <br>
    <div class="comments">
      <%@post.comments.each do |comment|%>
      <div class="comment">
        <%=comment.user.full_name%> : "<%=comment.comment_string%>" <i> <%=timeago_tag comment.created_at%> </i>
      </div>
      <%end%>
    </div>
    <br><br>
    <div class="add_comment">
      <%= form_for :comment, :url => comments_path(), :method => "POST" do |f|%>
      <input type="hidden" name="[post][id]" value= <%= @post.id %>>
      <%= f.text_area :comment_string, :placeholder => "Write a comment", :size => "30x2" %>
      <br>
      <%= submit_tag("Add") %>
      <%end%>
    </div>
  </div>
</div>

<div id="edit_history_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit history </h4>
      </div>
      <div class="modal-body">
        <%= image_tag 'loading.gif', class: 'loading' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-green" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  bind_edit_history_modal_click("<%=@post.id%>");
</script>
