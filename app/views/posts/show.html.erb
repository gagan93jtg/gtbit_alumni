      <%@post.comments.each do |comment|%> 
      <div class="separator_hr"></div>
      <div class="activity_question"> 
        <div class="left_div">
          <img src="/assets/logov2.png" alt="profile pic" class="img-circle public_activity_user">
        </div>
        <div class="right_div">
          <p class="user-name"><%=comment.user.full_name%></p>
          <p class="user-time"><%=timeago_tag comment.created_at%> </p>
       </div>
       <span class="post-string user-post"><%=comment.comment_string%></span>       
    </div>
    <%end%>

    <div class="form-group add_comment">
    <%= form_for :comment, :url => comments_path(), :method => "POST" do |f|%>
      <label for="query_tags">Add your Comments</label>
      <textarea rows="3" class="form-control" id="query_tags" placeholder="Write a comment" name="comment[comment_string]" value= <%= @post.id %> ></textarea>
      <%= submit_tag("Add", {class: "background-seagreen edit_post btn btn-submit"}) %>
      <%end%>
    </div>

  </div>


</div>

<div id="drawer" class="dark_blue side_nav">
  <h2>Off Canvas</h2>
  <p>Click outside the drawer to close</p>
</div>


