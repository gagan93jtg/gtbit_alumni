<div class="view_query_chain">
  <div class="container-custom">
    <div class="question">

      <div class="activity_question">
        <div class="left_div">
          <img src="/assets/logov2.png" alt="profile pic" class="img-circle public_activity_user">
        </div>
        <div class="right_div">
          <p class="user-name"> <%= link_to asked_by(@post.user), user_path(@post.user.id), class: '' %> asked <%= anonymous?(@post) %></p>
          <p class="user-time"><%=timeago_tag Time.at(@post.created_at) %></p>
        </div>
        <span class="user-post"><%= @post.query_string.strip %></span>
        <span class="user-tags"><%= @post.tags%></span>

        <% if @post.user.id == current_user.id %>
        <%= link_to "Edit post", edit_post_path(@post.id), class: 'edit_post background-seagreen' %>
        <% end %>

        <% if @post.post_histories.count > 0 %>
        <a href="#" data-toggle="modal" data-target="#edit_history_modal" class="background-seagreen btn edit_history"> View edit history </a>
        <% end %>
      </div>

      <div class="separator_hr"></div>
      <% @post.comments.each do |comment| %>

      <div class="activity_comment">
        <div class="left_div">
          <img src="/assets/logov2.png" alt="profile pic" class="img-circle public_activity_user">
        </div>
        <div class="right_div">
          <p class="user-name"><%= link_to comment.user.full_name, user_path(comment.user.id), class: '' %></p>
          <p class="user-time"><%=timeago_tag comment.created_at%> </p>
        </div><span class="user-post"><%=comment.comment_string%></span>
      </div>
      <% end %>
      <div class="form-group add_comment">
        <%= form_for :comment, :url => comments_path(), :method => "POST" do |f| %>
        <input type="hidden" name="[post][id]" value= <%= @post.id %>>
        <label for="query_tags">Add comment</label>
        <textarea rows="3" class="form-control" id="query_tags" placeholder="Write a comment" name="comment[comment_string]"></textarea>
        <%= submit_tag("Add", {class: "background-seagreen edit_post btn btn-submit add_comment_button"}) %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="edit_history_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit history </h4>
      </div>
      <div class="modal-body">
        <%= image_tag 'loading.gif', class: 'loading' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-green" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  bind_edit_history_modal_click("<%=@post.id%>");
</script>
