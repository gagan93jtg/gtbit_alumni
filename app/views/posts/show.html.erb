<div class="view_query_chain">
  <div class="container-custom">
    <div class="question">
    <br>
    
    <div class="activity_question">     
        <div class="left_div">
          <img src="/assets/logov2.png" alt="profile pic" class="img-circle public_activity_user">
        </div>
        <div class="right_div">
          <p class="user-name"><%= label_tag asked_by(@post.user) %> asked <%= anonymous?(@post) %></p>
          <p class="user-time"><%=timeago_tag Time.at(@post.created_at) %></p>
       </div>
       <span class="post-string user-post"><%= @post.query_string.strip %></span>  
       <% if @post.post_histories.count > 0 %>
       <a href="#" id="menu" class="background-seagreen edit_post history_btn btn btn-submit"> View edit history </a>
       <% end %>     
    </div>


